<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black_3">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/tvSecondary"
        android:background="@color/black_3"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="RtlCompat"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tvSecondary"
        android:id="@+id/tvPrimary"
        android:background="@color/black_3"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="50sp"
        tools:ignore="RtlCompat"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvPrimary"
        android:background="@color/black_1"
        app:cardBackgroundColor="@color/black_1"
        app:cardCornerRadius="4dp"
        android:elevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7"
            android:background="@color/black_1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btnAc"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="AC"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnC"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="C"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/brack1"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="("
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/brack2"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text=")"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:id="@+id/btnSin"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:textAllCaps="false"
                    android:text="sin"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnCos"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="cos"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnTan"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="tan"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnLog"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="log"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnLn"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="ln"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:id="@+id/btnFact"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:textAllCaps="false"
                    android:text="x!"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnSq"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="x^2"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnSqRoot"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="√"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnInv"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="1/x"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnDiv"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="/"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:textAllCaps="false"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btn8"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btn9"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="9"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnMul"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="x"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:textAllCaps="false"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btn6"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="6"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnSub"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="-"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:textAllCaps="false"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btn2"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btn3"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="3"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="+"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btnPie"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:textAllCaps="false"
                    android:text="∏"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnDot"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="."
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btnEqual"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_2"
                    android:padding="6dp"
                    android:text="="
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>